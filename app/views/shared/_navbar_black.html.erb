<div class="navbar-hype navbar-hype-black navbar-hype-fixed">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-hype-brand" do %>
    <%= image_tag "hm_logo_bl.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-hype-right hidden-xs hidden-sm">

    <!-- Search form -->
    <!-- <form action="" class="navbar-hype-search"> -->
      <!-- <input type="text" class="navbar-hype-search-input" placeholder="Clubs near you"> -->
      <!-- <button type="submit" class="navbar-hype-search-btn"> -->
        <!-- <i class="fa fa-search"></i> -->
      <!-- </button> -->
    <!-- </form> -->

    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>

      <!-- Notification -->
      <%= link_to "#", class: "navbar-hype-item navbar-hype-link" do %>
        <div class="badge-container">
          <i class="fa fa-envelope-o"></i>
          <div class="badge badge-blue">3</div>
        </div>
      <% end %>

      <!-- Profile picture and dropdown -->
      <div class="navbar-hype-item">
        <div class="dropdown">
          <%= image_tag "http://placehold.it/30x30", class: "avatar dropdown-toggle", id: "navbar-hype-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-hype-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Home") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>

      <!-- Login text link -->


    <% end %>

    <!-- Button (call-to-action) -->
      <input type="text" name="loco" class="navbar-hype-search-input" placeholder="Insert a location">
        <button class="navbar-hype-button-black btn" id="locat-search-btn">Search</button>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-hype-item hidden-md hidden-lg">
      <i class="fa fa-search dropdown-toggle" data-toggle="dropdown"></i>
  </div>
